{
  "name": "autohotpie-settings",
  "productName": "AutoHotPie",
  "version": "1.0.3-alpha",
  "description": "Universal Pie Menus for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "autohotpie-settings",
    "directories": {
      "buildResources": "resources"
    },
    "extraFiles": [
      {
        "from": "src",
        "to": "resources/src"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/AutoHotPieIcon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "installerIcon": "src/assets/AutoHotPieIcon.ico",
      "uninstallerIcon": "src/assets/AutoHotPieIcon.ico",
      "uninstallDisplayName": "AutoHotPie",
      "license": "license.txt",
      "oneClick": false,
      "menuCategory": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerSidebar": "src/assets/installer-sidebar.bmp"
    }
  },
  "keywords": [
    "radial menus",
    "pie menus",
    "AutoHotKey"
  ],
  "author": {
    "name": "dumbeau",
    "email": "caspergilles@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "autohotpie_settings"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "newlines": "^0.1.0",
    "trim": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "15.3.0",
    "electron-builder": "^22.13.1",
    "trim-newlines": "^4.0.2"
  }
}
